@{
  Layout = "_Layout";
}
  <h1>@Model.GetName()</h1>

  <form class="form-group" action="/stylist-details/@Model.GetId()" method="post">

    <label for="client-name">Enter a client:</label>
    <input type="text" name="client">

    <button type="submit" class="btn btn-success">Add Client</button>
      <a href="/"><button type="button" class="btn btn-info">Back to Stylists</button></a>
  </form>

  @foreach(var client in Model.SearchAllClients())
  {
    <div class="well">
    <form action="/stylist-details/@Model.GetId()/deleted/@client.GetId()" method="post">
    <button type="submit" class="btn btn-danger">x</button>
    </form>

    <span class="client-style">@client.GetName()</span>
    <a href="/stylistdetails/@Model.GetId()/edit/@client.GetId()"><button type="submit" class="btn btn-info">Edit</button></a>
    </div>
  }

</div>
